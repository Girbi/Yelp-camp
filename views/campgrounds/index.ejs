<% layout('layouts/boilerplate') %>
  <h1>All Campgrounds</h1>
  <form action="/campgrounds/new">
    <button>Add new Campground</button>
  </form>

  <% for(let camp of campgrounds) { %>
    <div class="card mb-4">
      <div class="row">
        <div class="col-md-4">
          <img class="img-fluid" src="<%= camp.image %> ">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title">
              <%= camp.title %>
            </h5>
            <h6 class="card-title">
              Starting at: $<%= camp.price %>
            </h6>
            <p class="card-text">
              <%= camp.description %>
            </p>
            <p class="card-text">
              <small class="text-muted">
                <%= camp.location %>
              </small>
            </p>
            <a class="btn btn-primary" href="/campgrounds/<%= camp._id %> ">
              View <%= camp.title %>
            </a>
          </div>
        </div>
      </div>
    </div>
    <% } %>